@page
@using Microsoft.AspNetCore.Identity
@model eOfficeWeb.Pages.AppUser.DashboardModel
@inject UserManager<ApplicationUser> UserManager
@{

   
}

<div class="container-fluid">
    <div class="row flex-nowrap">

        @*sidebar column starts*@
        <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0">
            <partial name="_SidebarPartial" />
        </div>
        @*sidebar column ends*@
   
        @* column for Main content starts*@
        <div class="col">
            <div class="row">

                @*mid column starts*@
                <div class="col-auto col-md-9">

                   @*Notification row starts*@
                   <div class="row ">
                    <div class="col-auto col-md ">
                            <div class="card border-0 shadow-sm p-3 border-radius-0 card-bg-lavenderblush">
                            
                            <div class="text-center border-0 border"><h4><i class="bi bi-bell-fill" ></i>  Notification  Centre</h4> </div>
                            <div class="card-text ">
                                <div class="row">
                                    <div class="col-sm fs-5">
                                
                                            <span class="" >
                                                Dak Uploaded Today <span class="badge bg-info">@Model.CountDakToday</span>
                                             </span>
                                               <br/>
                                             <span > Dak (Not yet seen) 
                                                @if (@Model.CountUnseenDak > 0)
                                                {
                                                    <span class="badge bg-danger">@Model.CountUnseenDak</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">@Model.CountUnseenDak</span>
                                                }
                                                
                                            </span>

                              
                                    </div>
                                    <div class="col-sm fs-5">
                                            <span  >
                                                Upcoming Events <span class="badge bg-info">@Model.CountUpcomingEvents</span>
                                            </span>
                                            <br/>
                                            <span > Pending Tasks 
                                                @if (@Model.CountDelayedTask > 0)
                                                {
                                                    <span class="badge bg-danger">@Model.CountDelayedTask</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">@Model.CountDelayedTask</span>
                                                }
                                                
                                            </span>
                                    </div>
                                    <div class="col-sm fs-5">
                                            <span > Social Calendar 
                                                @if (@Model.CountSocialCalendarToday > 0)
                                                {
                                                    <span class="badge bg-danger">@Model.CountSocialCalendarToday</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">@Model.CountSocialCalendarToday</span>
                                                }
                                                
                                            </span>
                                    </div>

                                </div>
                        
                            </div>
                        </div>  <!--Card ends-->
                        
                    </div>
            
                  </div> @*Notification row ends*@

                   @*row below notificaton*@ 
                   <div class="row  ">

                        <div id="accordion" class="my-3">
                          <div class="card">
                            <div class="card-header ">
                              <a class="btn text-black" data-bs-toggle="collapse" href="#collapseRecentDak">
                                <h5><i class="fa-solid fa-envelope-open-text icon-envelope" ></i> Recent Dak Received</h5>
                              </a>
                            </div>
                            <div id="collapseRecentDak" class="collapse show" data-bs-parent="#accordion">
                              <div class="card-body">
                                @*//Unauthorised User*@
                                        @if (@Model.LoggedInUser.OfficeBranch == "None" || (Model.LoggedInUser.OfficeBranch != "All" && @Model.LoggedInUser.OfficeBranchSection == "None"))
	                            {
		                            <div class="justify-content-center text-center p-5">
		
			                            <span class="text-danger display-6 p-5">
				                            Allocated Office branch or Section is not in order. You are locked out from Dak Module.<br/>
				                            Please contact your Admin.
		                            </div>
	                            }
                                else
                                {
                                <table class="table  p-0 m-0">
                                    <tbody>
                                        @foreach(var dak in Model.DakRecentFive)
                                        {
                                            <tr>
                                                <td>
                                                    <strong>Subject - </strong><strong class="text-primary"> @dak.Subject</strong><br/>
                                                    <span class="text-secondary ">Letter No @dak.LetterNo dated @dak.LetterDate.ToString("dd MMMM yyyy")</span><br/>
                                                    Received from <span class="text-success fw-bold">@dak.From</span> on @dak.DateReceived.ToString("dd MMMM yyyy")
                                                </td>
                                                <td class="" width="10%">
                                                    <center class="">
                                                        <a asp-page="UserDakView" asp-route-id="@dak.Id"  class="btn btn-sm btn-outline-success mx-2">
							                            <i class="fa-solid fa-eye"></i> View
						                            </a>
                                                    </center>
                                                </td>
                                            </tr>         
                                        }
                                    </tbody>
                                </table>
                                }

                              </div>
                            </div>
                          </div>
                        </div>

                        <div id="accordion" class="my-3">
                          <div class="card">
                            <div class="card-header">
                              <a class="collapsed btn" data-bs-toggle="collapse" href="#collapseTwo">
                                <h5><i class="fa-solid fa-calendar-days icon-calendar"></i> Upcoming Events (Next Week)</h5>
                              </a>
                            </div>
                            <div id="collapseTwo" class="collapse" data-bs-parent="#accordion">
                              <div class="card-body">
                                <table class="table  p-0 m-0">
                                    <tbody>
                                        @if (@Model.CountUpcomingEvents==0)
                                                {
                                                    <span class="fs-6">No upcoming events in next week.</span>
                                                }
                                        @foreach(var obj in Model.Events)
                                        {
                                            <tr>
                                                <td>
                                                    <h6 class="text-secondary"><i class="fa-solid fa-square" style="color:@obj.ThemeColor"></i>
                                                        @obj.Subject - Starting on @obj.Start.ToString("dddd, dd MMMM yyyy hh:mm tt")
                                                    </h6><br/>
                                                </td>
                                            </tr>         
                                        }
                                    </tbody>
                                </table>
                              </div>
                            </div>
                          </div>
                        </div>

                        <div id="accordion" class="my-3">
                          <div class="card">
                            <div class="card-header">
                              <a class="collapsed btn" data-bs-toggle="collapse" href="#collapseThree">
                                <h5><i class="fa-solid fa-cake-candles icon-cake-candles"></i> Social Calendar</h5>
                              </a>
                            </div>
                            <div id="collapseThree" class="collapse" data-bs-parent="#accordion">
                              <div class="card-body">
                                <table class="table  p-0 m-0">
                                    <tbody>
                                        @if (@Model.CountSocialCalendarWeek==0)
                                                {
                                                    <span class="fs-6">No upcoming birthday / anniversary</span>
                                                }
                                        @foreach(var socialCalendar in Model.SocialCalendarWeek)
                                        {
                                            <tr>
                                                <td>
                                                    <h6 class="text-secondary"><i class="bi bi-balloon"style="color:red"></i><i class="bi bi-balloon" style="color:gold"></i> 
                                                        @socialCalendar.EventDate.ToString("dd MMMM ") - @socialCalendar.EventType of @socialCalendar.Name</h6><br/>
                                                </td>
                                            </tr>         
                                        }
                                    </tbody>
                                </table>
                              </div>
                            </div>
                          </div>
                        </div>
                   </div>  
                   @*row below notificaton ends*@   
               
                </div> 
                @*mid column ends*@

                @*right most column starts*@
                <div class="col ">
                <div class="card border-0" >
                  <div class="card-header fs-6 fw-bold bg-gradient">
                            <i class="fa-solid fa-list-check fa-solid-thumbtack-color-blue"></i> &nbsp;  To Do List
                    <a asp-area="" asp-page="/AppUser/UserToDoList/Index" class="btn btn-sm btn-outline-primary" style="float:right"><i class="fa-solid fa-plus"></i> Add Task</a> 
                    </div>
                  <ul class="list-group list-group-flush">
                        @if (Model.CountAllTasks==0)
                        {
                            <span class="fs-6">No tasks have been added to the list. <br/> <br/>
                            
                            <hr/>
                            </span>
                        }
                        @foreach (var item in Model.ToDoList)
                        {
                                @if (item.CompletionTime.Date.ToString("dd MMMM yyyy") != "01 January 0001")
                                {
                                    <li class="list-group-item">
                                        @if (item.CompletionTime < DateTime.Now)
                                        {
                                            <span class="fw-bold fs-6"><i class="fa-solid fa-thumbtack fs-5" style="color:red" ></i> &nbsp; @item.Task </span>
                                            <span class="text-danger">(Need your attention)</span><br/>
                                        }
                                        else
                                        {
                                            <span class="fw-bold fs-6"><i class="fa-solid fa-thumbtack" style="color:deepskyblue" ></i> &nbsp; @item.Task</span> <br/>
                                        }


                                        <span> To be completed by</span>
                                        <span>@item.CompletionTime.ToString("dddd, dd MMMM yyyy hh:mm tt")</span>
                                    </li>
                                }
                            }
                     

                  </ul>
                </div>
                </div>
                @*right most column ends*@

            </div>
           
                  
        </div>
        @*Main content div/column ends*@

         

    </div> @*master row ends*@
</div> @*main container ends*@





