@page
@using eOffice.Utility
@model eOfficeWeb.Pages.AppUser.AppEventCalendar.EventListViewModel
@{
}

<div class="container">
    @*header row*@
    <div class="row ">
        <div class="col-8 justify-content-end text-start">
            <span class="display-6 text-primary" @*style="font-family: 'Brush Script MT', cursive;"*@>Event Calendar - List View</span>
        </div>
        <div class="col-4 text-end ">
            <a asp-page="Index" class="btn btn-outline-primary">Back to Calendar View</a>
        </div>
        <hr/>
    </div>


    @*table for events*@
    <div class="row">
        <table id="tableDakList"  class="table " style="width:100%">
		<thead>
			<tr>
				<th style="display:none">Id</th>
				<th></th>
				<th>Title</th>
				<th>Description</th>
				<th>Start</th>
				<th>End</th>
				
				
				<th style="width:10%"></th>
			</tr>
		</thead>
		<tbody>
			@foreach(var obj in Model.EventCalendar)
			{
				<tr>
					<td style="display:none" width="0%" >@obj.Id</td>
					<td style="width:3%;  margin:4px; background-color:@obj.ThemeColor"></td>
					<td>@obj.Subject</td>
					<td>@obj.Description</td>
					<td>@obj.Start</td>
					<td>@obj.End</td>

					<td>
						<form method="post">
						<div class="w-75 btn-group" role="group">
							@if (true)
								{
									<button type="submit" asp-page-handler="Delete" asp-route-id="@obj.Id" class="btn btn-sm btn-danger mx-2">
										<i class="fa-solid fa-trash"></i> Delete
									</button>
								}
						</div>
						</form>
					</td>
				</tr>
			}


		</tbody>
		</table>
    </div>

</div>

@section Scripts{
	<script src="~/js/dak.js"></script>

}
