@page
@using eOffice.Utility
@model eOfficeWeb.Pages.Admin.IncomingDak.DeleteModel
@{
	string localserver = Model.localserver;
	string coveringLetterUrl =  localserver + Model.Dak.CoveringLetter;
}



<form method="post" enctype="multipart/form-data">
	<input asp-for="Dak.Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<div class="col-4">
				<h2 class="text-danger pl-3">
					Delete Dak Entry
				</h2>
				<hr />

				<div class="row">
					<div class="mb-3">
					<label asp-for="Dak.Subject"></label>
					<input asp-for="Dak.Subject" disabled class="form-control" />
					<span asp-validation-for="Dak.Subject" class="text-danger"></span>
					</div>
					<div class="mb-3 col-6">
						<label asp-for="Dak.From"></label>
						<input asp-for="Dak.From" disabled class="form-control"/>
						<span asp-validation-for="Dak.From" class="text-danger"></span>
					</div>

					<div class="mb-3 col-6">
						<label asp-for="Dak.LetterNo"></label>
						<input asp-for="Dak.LetterNo" disabled class="form-control" />
						<span asp-validation-for="Dak.LetterNo" class="text-danger"></span>
					</div>

					<div class="mb-3 col-6">
						<label asp-for="Dak.LetterDate"></label>
						<input asp-for="Dak.LetterDate" disabled type="date" class="form-control" />
						<span asp-validation-for="Dak.LetterDate" class="text-danger"></span>
					</div>
					<div class="mb-3 col-6">
						<label asp-for="Dak.DateReceived"></label>
						<input asp-for="Dak.DateReceived" disabled type="date" class="form-control" />
						<span asp-validation-for="Dak.DateReceived" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<label asp-for="Dak.Remarks"></label>
						<input asp-for="Dak.Remarks" disabled class="form-control" />
						<span asp-validation-for="Dak.Remarks" class="text-danger"></span>
					</div>
				</div>
				
				<button type="submit" class="btn btn-danger" style="width:150px;">Delete</button>
				<a asp-page="Index" class="btn btn-secondary" style="width:150px;"> Back to List</a>
				
				

			</div>

			@*pdf viewer arear*@
			<div class="col-8">
				<iframe id="myFrame" runat="server" id="pdfView" src="@coveringLetterUrl" width="100%" height="800" > </iframe>
			</div>
		</div>

			



		

	</div>

</form>
