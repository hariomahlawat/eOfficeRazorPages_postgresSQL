@page
@using eOffice.Models
@model eOfficeWeb.Pages.Admin.UserAdministration.EditUserModel
@{
}

<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row">
                <h4 class="text-primary display-5" @*style="font-family: 'Brush Script MT', cursive;"*@>Edit User</h4>
                <hr />
                <div class="col-12 fs-6">
                    <form method="post" class="mt-3">
                        <input asp-for="ApplicationUser.Id" hidden />

                        <div class="form-group row m-2">
                            <label asp-for="ApplicationUser.UserName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="ApplicationUser.UserName" class="form-control" />
                                <span asp-validation-for="ApplicationUser.UserName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row m-2">
                            <label asp-for="ApplicationUser.Rank" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="ApplicationUser.Rank" class="form-control" />
                                <span asp-validation-for="ApplicationUser.Rank" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row m-2">
                            <label asp-for="ApplicationUser.FirstName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="ApplicationUser.FirstName" class="form-control" />
                                <span asp-validation-for="ApplicationUser.FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row m-2">
                            <label asp-for="ApplicationUser.LastName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="ApplicationUser.LastName" class="form-control" />
                                <span asp-validation-for="ApplicationUser.LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row m-2">
                            <label asp-for="ApplicationUser.OfficeBranch" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <select asp-for="ApplicationUser.OfficeBranch" asp-items="@Model.selectListOfficeBranches" class="form-control" >
                                    <option value="" disabled>Select Office Branch</option>
                                </select>

                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Update</button>
                                <a asp-area="" asp-page="/Admin/UserAdministration/UserManagement" class="btn btn-secondary">Cancel</a>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
        <div class="col-3"></div>
        
    </div>
</div>


                        
@section Scripts{
<script></script>
	@{
	<partial name="_ValidationScriptsPartial" />
	}
}