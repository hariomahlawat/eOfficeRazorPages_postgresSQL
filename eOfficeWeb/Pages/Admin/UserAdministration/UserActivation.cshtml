@page
@model eOfficeWeb.Pages.Admin.UserAdministration.UserActivationModel
@{
}


<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row">
                <h4 class="text-primary display-6" @*style="font-family: 'Brush Script MT', cursive;"*@>Selected User Details</h4>
                <hr />
                <div class="col-12 fs-6">
                    <form method="post" class="mt-3">
                        <input asp-for="ApplicationUser.Id" hidden />

                        <div class="form-group row m-2">
                            <label asp-for="ApplicationUser.UserName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input disabled asp-for="ApplicationUser.UserName" class="form-control" />
                                <span asp-validation-for="ApplicationUser.UserName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row m-2">
                            <label asp-for="ApplicationUser.Rank" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input disabled asp-for="ApplicationUser.Rank" class="form-control" />
                                <span asp-validation-for="ApplicationUser.Rank" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row m-2">
                            <label asp-for="ApplicationUser.FirstName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input disabled asp-for="ApplicationUser.FirstName" class="form-control" />
                                <span asp-validation-for="ApplicationUser.FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row m-2">
                            <label asp-for="ApplicationUser.LastName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input disabled asp-for="ApplicationUser.LastName" class="form-control" />
                                <span asp-validation-for="ApplicationUser.LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row m-2">
                            <label asp-for="ApplicationUser.OfficeBranch" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input disabled asp-for="ApplicationUser.OfficeBranch" class="form-control" />
                                <span asp-validation-for="ApplicationUser.OfficeBranch" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row m-2">
                            <label asp-for="ApplicationUser.IsEnabled" class="col-sm-2 col-form-label">Activation Status</label>
                            <div class="col-sm-10">
                                <input disabled asp-for="ApplicationUser.IsEnabled" class="form-control" />
                                <span asp-validation-for="ApplicationUser.IsEnabled" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-10">
                                @if (Model.ApplicationUser.IsEnabled == true)
                                {
                                    <button type="submit" class="btn btn-danger">Disable User</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-success">Activate User</button>
                                }

                                <a asp-area="" asp-page="/Admin/UserAdministration/UserManagement" class="btn btn-secondary">Cancel</a>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
        <div class="col-3"></div>

    </div>
</div>



@section Scripts{
    <script></script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}