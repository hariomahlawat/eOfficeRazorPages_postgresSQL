@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav">
        <li class="nav-item dropdown">
            <a id="manage" class="nav-link text-black dropdown-toggle ms-2" data-bs-toggle="dropdown" asp-area="" asp-page="" >
                @UserManager.GetUserName(User) <i class="fa-solid fa-user icon-user-color" ></i>
            </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                        <a class="nav-link text-black dropdown-item" id="register" asp-area="Identity" asp-page="/Account/Register">
                            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">
                                Logout <i class="fa-solid fa-power-off icon-power-off-color" ></i>
                                </button>
                            </form>    
                        </a>
                    </li>
                </ul>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login <i class="fa-solid fa-right-to-bracket icon-right-to-bracket-color" ></i></a>
        </li>
    </ul>
}
