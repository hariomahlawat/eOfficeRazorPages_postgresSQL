@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


@*eme logo*@
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4 align-content-center">
        <img src="~/images/ic_eme.png" class="mx-auto d-block" />
    </div>
    <div class="col-md-4"></div>
</div>
<div class="text-center">
    <span class="display-4">Welcome to <span class="" style="color:#ECAA81">eOffice</span></span>
    <p class="fs-6 fst-italic">A product of 619 EME Bn</p>
</div>


@*features of eOffice*@
<div class="container">
    <div class="row align-items-start">
    @*info card dak*@
    <div class="col">
        <div class="card border-0">
            <div class="card-body">
                <span >
                    <i class=" fs-1 fa-solid fa-envelope-open-text" style="color:royalblue"></i> <span class="fs-4" style="color:royalblue"> Dak Automation</span>
                </span>
                <p class="fs-5">
                    Automation of dak circulation in office. View and comment on the dak. Search old letters. Attach a draft reply to a dak.
                </p>
            </div>
        </div>
    </div>
    @*info card - todo list*@
    <div class="col">
        <div class="card border-0">
            <div class="card-body">
                <span >
                    <i class="fs-1 fa-solid fa-clipboard-list" style="color:darkgoldenrod" ></i> <span class="fs-4" style="color:darkgoldenrod"> To Do List</span>
                </span>
                <p class="fs-5">
                    Do you often feel completely overwhelmed with the amount of work you’ve got to do? Have your personalised ToDo list which can help you increase productivity.
                </p>
            </div>
        </div>
    </div>
    @*info card tech library*@
    <div class="col">
        <div class="card border-0">
            <div class="card-body">
                <span >
                    <i class="fs-1 fa-solid fa-book-open" style="color:firebrick"></i> <span class="fs-4" style="color:firebrick"> Tech Library</span>
                </span>
                <p class="fs-5">
                    Tech Library - under development. Access your all tech documents, EMERs, policies and books at one place. 
                </p>
            </div>
        </div>
    </div>
    @*info card*@
